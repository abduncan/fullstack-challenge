generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ExpenseCategory {
  mileage
  lodging
  rentalCar
  meals
  internet
  rideshare
  airfare
}

model Expense {
  id          Int             @id @default(autoincrement())
  amount      Float
  category    ExpenseCategory
  expenseDate DateTime
  description String
}
